@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<!DOCTYPE html>
<html class="vh-100" lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UmbTakeHome</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UmbTakeHome.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/font-awesome.min.css">
</head>
<body class="h-100">
    <div class="umbprimary p-5 h-100 d-flex">
        <div class="container m-auto">
            <div class="container w-25 rounded bg-white m-auto p-3">
                <div class="text-center">
                    <img src="~/Images/umblogo.png" id="logo" class="img-fluid" />
                </div>
                <div class="row">
                    <label for="usernameinput" class="form-label">Username</label>
                    <div class="col-12">
                        <input type="email" class="form-control" id="usernameinput" placeholder="name@example.com">
                    </div>
                </div>
                <div class="row mt-2">
                    <label for="passwordinput" class="form-label">Password</label>
                    <div class="col-12">
                        <input type="password" class="form-control" id="passwordinput">
                    </div>
                </div>
                <a class="nav-link btn btn-warning text-light mt-4 mb-4" aria-current="page" asp-area="" asp-page="/Landing">Login</a>
            </div>
        </div>
        
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
